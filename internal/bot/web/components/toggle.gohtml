{{ define "toggle" }}
    <button hx-post="{{ .Endpoint }}"
            hx-swap="outerHTML"
            class="w-full flex items-center justify-between p-3 bg-zinc-800 hover:bg-zinc-700 rounded-lg border border-zinc-700 transition">
        <span class="text-sm font-medium">{{ .Name }}</span>
        <div class="w-2.5 h-2.5 rounded-full {{ if .Enabled }}bg-green-500 shadow-[0_0_8px_#22c55e]{{ else }}bg-red-500{{ end }}"></div>
    </button>
{{ end }}